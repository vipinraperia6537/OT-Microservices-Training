pipeline {

  environment {
    dockerimagename = "empms-gateway"
    dockerImage = ""
  }

  agent any

  stages {
  stage('Checkout Source') {
      steps {
        git 'https://github.com/vipinraperia6537/OT-Microservices-Training.git'
      }
    }

       stage('Build image') {
      steps{
        script {
        dir("gateway") {
          dockerImage = docker.build dockerimagename
        }
      }
    }
    }

    stage('Pushing Image') {
      environment {
               credentialsId = 'dockerhublogin'
           }
      steps{
        script {
         // docker.withRegistry( 'https://registry.hub.docker.com', registryCredential ) {
           // dockerImage.push("latest")
         
      //withDockerRegistry(credentialsId: 'dockerhublogin', url: 'https://registry.hub.docker.com') {
      //dockerImage.push("latest")
      stage("Pushing image to ECR") {
        docker.withRegistry('https://390287378384.dkr.ecr.ap-southeast-1.amazonaws.com/vipin-1', ' dockerimagename') {
            //docker.image('${JOB_NAME}').push('${BUILD_ID}')
            dockerImage.push("latest")
        }
         }
        }
      }
    }
    }
    }
