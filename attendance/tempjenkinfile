pipeline {
    agent any

    stages {
    stage("Building image attendance") {
    steps{
    script{
        dir("attendance") {
          sh "whoami"
          sh "sudo docker build ."
          
            }
           } 
        }
        }
        stage("Building image employee") {
    steps{
    script{
        dir("employee") {
          
          sh "sudo docker build ."
          
            }
           } 
        }
        }
        
    }
}
